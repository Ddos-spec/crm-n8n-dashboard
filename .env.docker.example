# =============================================
# Docker Compose Environment Variables
# =============================================
# Copy this file to .env in the project root
# and update the values below
# =============================================

# Database Password
DB_PASSWORD=your-secure-database-password

# JWT Secret (generate with: openssl rand -hex 64)
JWT_SECRET=your-secure-jwt-secret-here-please-generate-with-openssl

# Public URL (your domain or IP)
PUBLIC_URL=https://your-domain.com

# CORS Origin (optional for same-server)
# For same-VPS: use * or leave empty
# For separate deployment: set to frontend URL
CORS_ORIGIN=*

# WhatsApp Integration
WHATSAPP_API_URL=https://app.notif.my.id/api/v2/send-message
WHATSAPP_API_KEY=your-whatsapp-api-key
